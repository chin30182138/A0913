    (function(){
      window.setCtx = function(v){
        var i = document.getElementById('context');
        if(!i) return; i.value = (v||'').toString().trim();
        try{ i.dispatchEvent(new Event('input',{bubbles:true})); }catch(e){}
      };
    })();
